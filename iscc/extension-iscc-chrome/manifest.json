{
  "manifest_version": 3,
  "name": "Content Info",
  "version": "0.3.8",
  "description": "Searches for content info and declarations",
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.ico"
  },
  "icons": {
    "48": "icon.ico"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "info.svg",
        "content-info.svg",
        "l-icon.png",
        "cc-icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}